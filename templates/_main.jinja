<!doctype html>
<html lang="en">

<head>
    <title> {% block title %} Title {% endblock %} </title>
    {% include "_head.jinja" %}
</head>

<body>
<header>
    <h1> <a href= "{{ url_for("view_welcome_page") }}">  My blog </a> </h1>
</header> 


{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        <ul class="flashes">
        {% for category, message in messages %}
            <li class="{{category}}"> {{message}} </li>
        </ul>
        {% endfor %}
    {% endif %}
{% endwith %}

<head>  
    {% include "_nav.jinja" %}
</head>

<main>
    {% block main %}  
    
    
    {% endblock %}
</main>

{% include "_footer.jinja" %}
</body>
</html>